{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "dist"
  },
  "include": [
    "./hardhat.config.*",
    "./scripts/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "cache",
    "typechain-types",
    "deployments.json"
  ]
}
